                <field name="partner_id"/>
                <field name="name"/>
                <field name="sending_date"/>
                <field name="carrier_name"/>
                
                <field name="weight" sum="Total Weight"/>
                <field name="price_subtotal" sum="Subtotal Price HT"/>
