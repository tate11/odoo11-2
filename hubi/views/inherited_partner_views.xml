        <record id="action_hubi_establishment" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_partner_establishment"/>
            <field name="act_window_id" ref="action_hubi_partner_establishment"/>
        </record>-->
 
    
    </data>
</odoo>
